@model adminLTE.ViewModel.KalenderViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MainMenu.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Kegiatan
        <small>advanced tables</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="https://localhost:44384/Home/Beranda"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Kalender Kegiatan</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Anggota" asp-action="AddOrEdit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label class="control-label"> Kegiatan</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Kegiatan</label>
                    <input asp-for="KegiatanOrmawaId" class="form-control" />
                    <span asp-validation-for="KegiatanOrmawaId" class="text-danger"></span>
                </div>
                <div class="form-group" col-md-6>
                    <label class="control-label">Waktu Mulai</label>
                    <input asp-for="Tmt" class="form-control" />
                    <span asp-validation-for="Tmt" class="text-danger"></span>
                </div>
                <div class="form-group" col-md-6>
                    <label class="control-label">Waktu Selesai</label>
                    <input asp-for="Tst" class="form-control" />
                    <span asp-validation-for="Tst" class="text-danger"></span>
                </div>
